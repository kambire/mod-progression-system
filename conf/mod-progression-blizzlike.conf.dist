#
# ==============================================
#    HEROIC DUNGEON "GS" REQUIREMENTS (OPTIONAL)
# ==============================================
#
# NOTE:
# AzerothCore does not natively enforce GearScore. To keep this module self-contained,
# the implementation uses a "pseudo-GS" derived from the player's equipped average item level:
#   pseudoGS = round(avgEquippedIlvl * AvgIlvlMultiplier)
#
# Defaults are based on the proposed progression table:
# - 80_1_2 (T7):  3500
# - 80_2_1 (T7):  3500
# - 80_2_2 (T8):  4000
# - 80_3   (T9):  4400
# - 80_4_1 (ICC): 4800
# - ICC5 normal:  5000 (FoS/PoS/HoR normal)
# - ICC5 heroic:  5400 (FoS/PoS/HoR heroic)
#
# This gate is enforced on map entry (OnPlayerMapChanged), so it also blocks bypass methods.
#

ProgressionSystem.HeroicGs.Enabled = 0

# Multiplier to convert average equipped iLvl into a pseudo-GS number.
# Typical WotLK-friendly value: 20.0
ProgressionSystem.HeroicGs.AvgIlvlMultiplier = 20.0

# Per-bracket requirements (0 disables enforcement for that bracket).
ProgressionSystem.HeroicGs.Required_80_1_2 = 3500
ProgressionSystem.HeroicGs.Required_80_2_1 = 3500
ProgressionSystem.HeroicGs.Required_80_2_2 = 4000
# Legacy alias (pre-split). Used as fallback for 80_2_2.
ProgressionSystem.HeroicGs.Required_80_2   = 4000
ProgressionSystem.HeroicGs.Required_80_3   = 4400
ProgressionSystem.HeroicGs.Required_80_4_1 = 4800

# Ruby Sanctum bracket doesn't add new heroics; keep same by default (adjust if you want "late" strictness).
ProgressionSystem.HeroicGs.Required_80_4_2 = 4800

# ICC 5-man dungeons: Forge of Souls (632), Pit of Saron (658), Halls of Reflection (668)
ProgressionSystem.HeroicGs.Required_Icc5_Normal = 5000
ProgressionSystem.HeroicGs.Required_Icc5_Heroic = 5400

